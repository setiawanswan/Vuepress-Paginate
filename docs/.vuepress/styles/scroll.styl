article {
  margin 0 auto
  width 400px

    section {
        width 400px
        margin-bottom 20px
        border-radius 10px
        background-color #efefef
        color #04525a
        overflow hidden

    p {
        margin 0px
        padding 10px 20px
    }
  }

        footer{
            position relative
            width 400px

        #scroll-trigger{
            height 50px   
        }

        .circle-loader{
            position absolute
            top 50%
            left 50%
            transform translate(-50%, -50%)
            width 50px
            height 50px
            border-radius 50%
            border 1px solid rgba(255, 255, 255, 2)
            border-top 5px solid #fff
            animation: animation 1.5s infinite linier 
        }
    }
}

@keyframes animate{
    0%{
        transform translate(-50%,-50%) rotate(0deg)
    }
    100%{
        transform translate(-50%, 50%) rotate(360deg)
    }
}
